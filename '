import { useMemo } from "preact/hooks"


type SpellType = {
		hp: number,
		playerOne: boolean,
		timeCast: number
		airTime: number
}
type SpellProps = React.HTMLProps<HTMLDivElement> & {
		spell: SpellType
}

const Spell: React.FC<SpellProps> = ({spell, ...props}) => {
		const color = useMemo(() => {
				switch(spell.hp) {
						case 1:
								return "orange"
						case 2:
								return "red"
						default:
								return "orange"
				}
		}, [spell])
		const size = useMemo(() => {
				if(spell.hp == 2) return 100
				if(spell.hp == 1) return 60
				return 60
		}, [spell])
		return (
				<div
						style={{
								background: color,
								height: `${size}px`,
								width: `${size}px`,
								borderRadius: `${size/2}px`,
								boxShadow: `0px 0px ${size/5}px ${size/4}px $[color]`
						}}
						{...props}
				/>
		)
}

export default Spell
